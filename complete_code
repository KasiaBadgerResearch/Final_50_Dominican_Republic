# How has life expectancy at birth for women evolved relative to that for men in the Dominican Republic between 1960 and 2020?

import pandas as pd
import matplotlib.pyplot as plt
import os

# Folders
data_raw_folder = "data_raw/"
data_clean_folder = "data_clean/"
figures_folder = "figures/"

# Load CSV
filename = "social-development_dom_filtered.csv"  # Filtered dataset with only relevant rows
df = pd.read_csv(os.path.join(data_raw_folder, filename))

# Keep only needed columns
df = df[["Year", "Indicator Name", "Value"]]

# Convert Year and Value to numeric, drop invalid rows
df["Year"] = pd.to_numeric(df["Year"], errors="coerce")
df["Value"] = pd.to_numeric(df["Value"], errors="coerce")
df = df.dropna(subset=["Year", "Value"])

# Pivot indicators into separate columns
df_pivot = df.pivot(index="Year", columns="Indicator Name", values="Value").reset_index()
df_pivot = df_pivot.sort_values("Year")

print("Pivoted Dominican Republic dataset:")
display(df_pivot)

# Interpolate missing values for smooth plotting (optional)
df_plot = df_pivot.interpolate(method='linear')

# Plot the indicators
plt.figure(figsize=(10,6))
plt.plot(df_plot["Year"], df_plot["Life expectancy at birth, female (years)"], 
         marker='o', linestyle='-', label="Life expectancy at birth, female (years)")
plt.plot(df_plot["Year"], df_plot["Life expectancy at birth, male (years)"], 
         marker='o', linestyle='-', label="Life expectancy at birth, male (years)")

plt.title("Dominican Republic: Female vs Male life expectancy at birth (1960-2020)")
plt.xlabel("Year")
plt.ylabel("Years")
plt.legend()
plt.grid(True)
plt.tight_layout()
plt.savefig(os.path.join(figures_folder, "dominican_republic_female_vs_male_life_expectancy_at_birth.png"))
plt.show()

# Save cleaned CSV
df_pivot.to_csv(os.path.join(data_clean_folder, "dominican_republic_female_vs_male_life_expectancy_at_birth"), index=False)
